pipeline {
    agent any
    tools {
        maven 'Maven9'
        jdk 'JDK17'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SamCodesAlright/jenkins-maven-ci.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.war', fingerprint: true
            }
        }
        stage('Deploy to Tomcat') {
            steps {
                bat '''
                copy target\\hello-world.war C:\\apache-tomcat-9.0.109\\webapps\\hello-world.war
                '''
            }
        }
    }
}
