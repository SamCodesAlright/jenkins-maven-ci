pipeline {
    agent any
    tools {
        maven 'Maven9'  
        jdk 'JDK17'       
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SamCodesAlright/jenkins-maven-ci.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
